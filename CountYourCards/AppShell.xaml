<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CountYourCards.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CountYourCards.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="CountYourCards">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Formular"
        ContentTemplate="{DataTemplate views:Formular}"
        Route="Formular" />
</Shell>
